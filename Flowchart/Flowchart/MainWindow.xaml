<Window x:Class="Flowchart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flowchart"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="525">
    <Grid>
        <Button x:Name="CreateFlowchart" Content="Create" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="75" Click="CreateFlowchart_Click"/>
        <Button Content="^" HorizontalAlignment="Center" Margin="0,543,0,0" VerticalAlignment="Top" Width="74" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180.0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <ScrollViewer x:Name="SV" Margin="0,37,0,42" >
            <StackPanel x:Name="ContentWindowSP"  Orientation="Vertical" Width="329">
                
            </StackPanel>
        </ScrollViewer>
        <Button Content="^" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="74"/>

    </Grid>
</Window>
